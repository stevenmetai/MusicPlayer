<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/spinner_width"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spinner_item_height"
        android:id="@+id/title"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/spinner_text_paddingStart"
        android:textSize="@dimen/drawer_item_text_size"
        android:textColor="@android:color/white"
        android:background="@drawable/spinner_item_selector"
        android:fontFamily="sans-serif-light" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
</LinearLayout>